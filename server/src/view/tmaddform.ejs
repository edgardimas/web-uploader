<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test Mapping Form</title>
    <script>
      async function handleFormSubmit(event, method) {
        event.preventDefault();
        const accessToken = localStorage.getItem("access_token");
        if (!accessToken) {
          alert("Access token not found! Please log in.");
        }
        return;
      }

      const hisCode = document.getElementById("fname").value;
      const lisCode = document.getElementById("lname").value;
      try {
        const response = await fetch("/api/add-mapping", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            access_token: accessToken,
          },
          body: JSON.stringify({
            his_code: hisCode,
            lis_code: lisCode,
          }),
        });
        if (response.ok) {
          const result = await response.json();
          alert(`Mapping added: ${result.message}`);
          windows.location.href = "/view/testmappings";
        } else {
          const error = await response.json();
          alert(`Error: ${error.message}`);
        }
      } catch (err) {
        console.error("Error:", err);
        alert("An error occurred while sending the request.");
      }
    </script>
  </head>
  <body>
    <form>
      <h1>Add Test Mapping</h1>
      <form id="addForm" onsubmit="handleAddFormSubmit(event)">
        <label for="fname">HIS Code:</label><br />
        <input type="text" id="fname" name="fname" required /><br />
        <label for="lname">LIS Code:</label><br />
        <input type="text" id="lname" name="lname" required /><br /><br />
        <button type="submit">Add Mapping</button>
      </form>
    </form>
  </body>
</html>
