<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test Mappings</title>
    <link rel="stylesheet" href="/styles/styles.css" />
    <script src="/scripts/onotracer.js"></script>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <h1>ONO Tracing </h1>
    <label for="searchInput">Search ONO:</label>
    <input
      type="text"
      id="searchInput"
      placeholder="e.g. 12345"
      onkeypress="handleKeyPress(event)"
    />
    <button onclick="searchByOno()">Search</button>
    
    <!-- Display results dynamically -->
    <div id="searchResults"></div>


      <table class="ono-tracer-table" border="1">
        <thead>
          <tr>
            <th>id</th>
            <th>Ono</th>
            <th>Name</th>
            <th>PID</th>
            <th>is_received</th>
            <th>is_ok</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="tableBody">
          <% data.forEach((item) => { %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.ono %></td>
            <td><%= item.name %></td>
            <td><%= item.pid %></td>
            <td class="center-icon">
                <% if (item.is_received) { %>
                    <span style="color: green;">✅</span>
                <% } else { %>
                    <span style="color: red;">❌</span>
                <% } %>
            </td>
            
            <td class="center-icon">
                <% if (item.is_ok) { %>
                    <span style="color: green;">✅</span>
                <% } else { %>
                    <span style="color: red;">❌</span>
                <% } %>
            </td>
            <td>
              <button
                onclick="editButtonHandler(event, '<%=item.his_code%>', '<%= item.lis_code%>' )"
              >
                Details
              </button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>

      <!-- Pagination Controls -->
      <div class="pagination">
        <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>">Previous</a>
        <% } %>

        <span>Page <%= currentPage %> of <%= totalPages %></span>

        <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>">Next</a>
        <% } %>
      </div>
    </div>
  </body>
</html>
