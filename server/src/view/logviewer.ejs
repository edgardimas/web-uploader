<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Logs</title>
  </head>
  <body>
    <h1>Log Viewer</h1>
    <h2>Available Logs</h2>
    <ul>
      <% logFiles.forEach(file => { %>
      <li>
        <a href="/view/<%= file %>"><%= file %></a>
      </li>
      <% }) %>
    </ul>

    <% if (logs) { %>
    <h2>Messages in <%= currentFile %></h2>
    <ul>
      <% logs.forEach(log => { %>
      <li><%= log.time %><%= log.msg %></li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>Select a log file to view its messages.</p>
    <% } %>
  </body>
</html>
